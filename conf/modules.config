    withName: PARSE_ASSEMBLIES {
        publishDir = [
            path: { "${params.outdir}/reference_data/considered" },
            mode: params.publish_dir_mode != 'mixed' ?: 'symlink',
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
