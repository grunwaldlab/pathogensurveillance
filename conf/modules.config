        storeDir = { params.data_dir == "false" ? null : "${params.data_dir}/assembly_metadata" }
        ext.args = { "--as-json-lines" }
        beforeScript = 'sleep "0.$(($RANDOM % 100))"'
    }

    withName: 'FLYE.*' {
