    }

    withName: IQTREE_SNP {
        publishDir = [
            path: { "${params.outdir}/trees/snp" },
            mode: params.publish_dir_mode != 'mixed' ?: 'copy',
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        ext.args = '--seqtype DNA -m GTR+ASC'
        cpus   = { 4     * task.attempt }
        memory = { 15.GB * task.attempt }
        time   = { 48.h  * task.attempt }
    }

    withName: MAFFT_BUSCO {
        publishDir = [
            path: { "${params.outdir}/aligned_genes/busco_genes" },
            mode: params.publish_dir_mode != 'mixed' ?: 'symlink',
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        cpus   = { 1                   }
        memory = { 4.GB * task.attempt }
        time   = { 4.h  * task.attempt }
        ext.prefix = { "${fasta.getSimpleName()}_aligned" }
    }

    withName: MAFFT_CORE {
        publishDir = [
            path: { "${params.outdir}/aligned_genes/core_genes" },
            mode: params.publish_dir_mode != 'mixed' ?: 'symlink',
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        cpus   = { 1                   }
        memory = { 4.GB * task.attempt }
        time   = { 4.h  * task.attempt }
        ext.prefix = { "${fasta.getSimpleName()}_aligned" }
    }

    withName: 'MAIN_REPORT.*' {
        publishDir = [
            path: { "${params.outdir}/reports" },
            mode: params.publish_dir_mode != 'mixed' ?: 'copy',
            overwrite: true,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        ext.args = "--no-cache"
    }

    withName: MAKE_GFF_WITH_FASTA {
        publishDir = [
            enabled: false
        ]
        cpus   = { 1                   }
        memory = { 1.GB * task.attempt }
        time   = { 1.h  * task.attempt }
    }

    withName: MAKE_REGION_FILE {
        publishDir = [
            enabled: false
        ]
        cpus   = { 1                   }
        memory = { 1.GB * task.attempt }
        time   = { 1.h  * task.attempt }
    }

    withName: MULTIQC {
        publishDir = [
            path: { "${params.outdir}/quality_control/multiqc" },
            mode: params.publish_dir_mode != 'mixed' ?: 'copy',
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
