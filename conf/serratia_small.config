/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running a test data set
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run nf-core/pathogensurveillance -profile serratia_N664,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Serratia subset dataset profile for testing'
    config_profile_description = 'Serratia subset dataset profile used to find bugs and to review report outputs'

    // Input data
    input = 'tests/data/metadata/serratia_small.csv'
    outdir = 'tests/output/serratia_small'
    reference_data = 'tests/data/metadata/serratia_N664_ref_data.csv'
    n_ref_species = 0
    n_ref_genera = 0
    n_ref_closest = 0
    n_ref_closest_named = 0
    n_ref_context = 0
    n_ref_strains = 0
}
