/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/pathogensurveillance -profile test_bacteroides,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/
params {
    config_profile_name        = 'Test profile of 3 Bacteroides fragilis'
    config_profile_description = 'Test profile of 3 Bacteroides fragilis'

    // Input data
    input = params.pipelines_testdata_base_path + 'samplesheets/bacteroides.tsv'
    phylo_max_genes = 100
    n_ref_closest = 1
    n_ref_closest_named = 1
    n_ref_context = 7
    n_ref_strains = '1'
    n_ref_species = '5'
    n_ref_genera = '5'
}
